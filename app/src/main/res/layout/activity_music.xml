            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous Page"
            android:src="@drawable/ic_previous" />

        <TextView
            android:id="@+id/page_dot1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="1"
            android:textSize="16sp" />

        <!-- Dot 2 -->
        <TextView
            android:id="@+id/page_dot2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="2"
            android:textSize="16sp" />

        <!-- Dot 3 -->
        <TextView
            android:id="@+id/page_dot3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="3"
            android:textSize="16sp" />

        <!-- Dot 4 -->
        <TextView
            android:id="@+id/page_dot4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="4"
            android:textSize="16sp" />

        <!-- Right Arrow ImageButton -->
        <ImageButton
            android:id="@+id/btn_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next Page"
            android:src="@drawable/ic_next" />
    </LinearLayout>

