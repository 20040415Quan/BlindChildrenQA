    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/music_list"
        android:layout_width="700dp"
        android:layout_height="600dp"
        android:background="#F4F9FD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/music_player"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/page_indicator_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="@+id/music_list"
        app:layout_constraintStart_toStartOf="@+id/music_list">

