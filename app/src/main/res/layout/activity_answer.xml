<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F9FD"
    android:focusable="true">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/edt_text_question">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--没有聊天记录时展示-->
            <LinearLayout
                android:id="@+id/view_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_ai"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_marginTop="26dp"
                    android:gravity="center"
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多模态盲童绘本"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_marginTop="26dp"
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是一个集语音问答和内容播放功能于一体的AI面板，专为盲童绘本设计，\n帮助盲童更好地享受阅读乐趣。你可以问我你想问的问题。"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"/>

                <Button
                    android:layout_marginTop="26dp"
                    android:id="@+id/button1"
                    android:layout_width="600dp"
                    android:layout_height="84dp"
                    android:background="@drawable/button_answer"
                    android:drawableRight="@drawable/icon_prompt"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="20dp"
                    android:text="示例提示词"
                    android:layout_gravity="center_horizontal"/>

                <Button
                    android:layout_marginTop="26dp"
                    android:id="@+id/button2"
                    android:layout_width="600dp"
                    android:layout_height="84dp"
                    android:background="@drawable/button_answer"
                    android:drawableRight="@drawable/icon_prompt"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="20dp"
                    android:text="示例提示词"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_marginTop="26dp"
                    android:id="@+id/button3"
                    android:layout_width="600dp"
                    android:layout_height="84dp"
                    android:background="@drawable/button_answer"
                    android:drawableRight="@drawable/icon_ai1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="20dp"
                    android:text="示例提示词"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_marginTop="26dp"
                    android:id="@+id/button4"
                    android:layout_width="600dp"
                    android:layout_height="84dp"
                    android:background="@drawable/button_answer"
                    android:drawableRight="@drawable/icon_ai1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="20dp"
                    android:text="示例提示词"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_marginTop="26dp"
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="换一批"
                    android:textColor="#5894F6"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                tools:listitem="@layout/layout_rec_chat_list"
                tools:itemCount="7"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rec_cart_list"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <!--底部输入框部分，以此为底部基础对齐-->
    <EditText
        android:id="@+id/edt_text_question"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_answer"
        android:gravity="center_vertical"
        android:hint="请文字输入问题"
        android:maxLines="1"
        android:paddingStart="44dp"
        android:paddingEnd="90dp"
        android:textColor="@color/black"
        android:textColorHint="#494C4F99"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/btn_record"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_voice"
        app:layout_constraintBottom_toBottomOf="@id/edt_text_question"
        app:layout_constraintEnd_toStartOf="@id/edt_text_question"
        app:layout_constraintTop_toTopOf="@id/edt_text_question" />

    <ImageButton
        android:id="@+id/btn_send"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="44dp"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_send"
        app:layout_constraintBottom_toBottomOf="@id/edt_text_question"
        app:layout_constraintEnd_toEndOf="@id/edt_text_question"
        app:layout_constraintTop_toTopOf="@id/edt_text_question" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_answer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>